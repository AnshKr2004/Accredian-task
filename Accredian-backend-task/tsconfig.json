{
    "compilerOptions": {
      "target": "ES2023",
      "module": "commonjs",
      "lib": ["ESNext", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "build",
      "rootDir": "src",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  